#!/usr/bin/env node

/**
 * Module dependencies.
 */
console.log("www pid", process.pid);

const path = require("path");
const dotenv = require("dotenv");
// Ð•ÑÐ»Ð¸ Ð·Ð°Ð¿ÑƒÑÐº ÐºÐ°Ðº ÑÐµÑ€Ð²Ð¸ÑÐ°, Ñ‚Ð¾ Ñ‚ÐµÐºÑƒÑ‰Ð°Ñ Ð¿Ð°Ð¿ÐºÐ° Ð¿Ñ€Ð¾Ñ†ÐµÑÑÐ° - ÐºÐ¾Ñ€ÐµÐ½ÑŒ ÑÐ¸ÑÑ‚ÐµÐ¼Ñ‹
if (process.cwd() === "/") {
    const pathToenv = path.resolve(__dirname, '../.env');
    console.log("env path", pathToenv);
    console.log("process.cwd()", process.cwd());
    dotenv.config({ path: pathToenv });
    console.log("DB_LOGIN", process.env.DB_LOGIN);
} else {
    console.log("load default env");
    console.log("process.cwd()", process.cwd());
    const pathToenv = path.resolve(__dirname, '../.env');
    console.log("env path", pathToenv);
    dotenv.config();

    console.log("DB_LOGIN", process.env.DB_LOGIN);
}

const os = require("os");
const app = require('../dist/app');
const debug = require('debug')('webcustomprint:server');
const http = require('http');

/*
