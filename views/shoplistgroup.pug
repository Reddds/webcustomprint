block content
  each prod in group.prods  
    //- prodInCol++;
    .me-3.mb-3
      - var id = `prod_${prod.id}`;
      - var idDel = `prod_${prod.id}_del`;
      
      .btn-group(role="group",aria-label="Basic example")
        
        button.btn.btn-outline-primary.text-nowrap.prod-add(id=id, data-name=prod.name, data-add-count-type=prod.addCountType, data-group-id=group.groupId, data-group-name=group.groupName)
          if prod.image 
            img.prod-img(src=prod.image, alt=prod.name)
          else  
            img.prod-img(src=`/images/prods/empty.webp`, alt=prod.name)
          span=prod.name
          span.prod-quantity
        button.btn.btn-primary.prod-edit(data-prod-id=prod.id, data-prod-name=prod.name, data-prod-image=prod.image, data-add-count-type=prod.addCountType, data-group-id=group.groupId, data-group-name=group.groupName, data-el-id=tabId, data-template-name="shoplistgroup")       
